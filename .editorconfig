# editorconfig.org
# See all available features at https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single
indent_brace_style = K&R
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
